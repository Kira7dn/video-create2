# API Configuration
API_TITLE="Video Creation API"
API_VERSION="1.0.0"
DEBUG=false

# AWS S3 Configuration
AWS_ACCESS_KEY_ID="your-access-key-id"
AWS_SECRET_ACCESS_KEY="your-secret-access-key"
AWS_S3_BUCKET="your-bucket-name"
AWS_S3_REGION="us-east-1"
AWS_S3_PREFIX="videos/"

# Server Configuration
HOST="0.0.0.0"
PORT=8000

# AI Integration Settings
OPENAI_API_KEY="your-openai-api-key-here"
AI_KEYWORD_EXTRACTION_ENABLED=true
AI_MODEL_NAME="gpt-3.5-turbo"
AI_KEYWORD_EXTRACTION_TIMEOUT=10
AI_MAX_KEYWORDS_PER_PROMPT=5

# Image Search Settings
PIXABAY_API_KEY="your-pixabay-api-key-here"
IMAGE_AUTO_ENABLED=true

# Image Validation Settings
VIDEO_MIN_IMAGE_WIDTH=1280
VIDEO_MIN_IMAGE_HEIGHT=720

# Video Processing Settings
VIDEO_DEFAULT_FPS=24
VIDEO_DEFAULT_CODEC="libx264"
VIDEO_DEFAULT_AUDIO_CODEC="aac"
VIDEO_DEFAULT_RESOLUTION="1920,1080"

# Audio Processing Settings
AUDIO_BACKGROUND_MUSIC_VOLUME=0.1
AUDIO_DEFAULT_SAMPLE_RATE=44100
AUDIO_DEFAULT_BITRATE="192k"

# Performance Settings
PERFORMANCE_MAX_CONCURRENT_SEGMENTS=1
PERFORMANCE_MAX_MEMORY_MB=2048
DOWNLOAD_MAX_CONCURRENT=10
DOWNLOAD_TIMEOUT=30

# Output Settings
OUTPUT_DIRECTORY="data/output"

# Temporary Directory Settings
TEMP_DIR_PREFIX="tmp_create_"
CLEANUP_TEMP_FILES=true

# FFmpeg Settings
FFMPEG_BINARY_PATH="ffmpeg"
FFMPEG_TIMEOUT=300
FFMPEG_PRESET="medium"

# Logging Settings
LOG_LEVEL="INFO"
